    min-height: 80px !important;
    padding: 15px !important;
  }
  
  .keypad-modal-fullscreen .keypad-grid {
    grid-template-rows: repeat(4, 70px) !important;
    gap: 12px !important;
  }
  
  .keypad-modal-fullscreen .keypad-btn {
    font-size: 24px !important;
  }
}
