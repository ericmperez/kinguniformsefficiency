{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*\\..*)", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/truck-assignment-check",
      "schedule": "0 20 * * *"
    }
  ],
  "env": {
    "EMAIL_USER": "@email-user",
    "EMAIL_PASSWORD": "@email-password",
    "CRON_SECRET": "@cron-secret"
  }
}
